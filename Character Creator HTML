    <script>
        function changeLevel(value) {
            var levelInput = document.getElementById("level");
            var currentLevel = parseInt(levelInput.value);
            var newLevel = currentLevel + value;
            if (newLevel >= parseInt(levelInput.min) && newLevel <= parseInt(levelInput.max)) {
                levelInput.value = newLevel;
            }
        }

        function calculateStats() {
            var skill = parseInt(document.getElementById("skill").value);
            var courage = parseInt(document.getElementById("courage").value);
            var focus = parseInt(document.getElementById("focus").value);
            var level = parseInt(document.getElementById("level").value);
            var senko = 3 * skill + 2 * courage + focus;
            var vitality = 13 + 2 * courage + 4 * (level - 1);
            var spirit = 3 + focus + (level - 1);
            var armor = parseInt(document.getElementById("armor").value);
            var defense = 3 * armor;
            document.getElementById("senko").value = senko;
            document.getElementById("vitality").value = vitality;
            document.getElementById("spirit").value = spirit;
            document.getElementById("defense").value = defense;
        }

        function saveCharacter() {
            // Implement saving functionality here
            alert("Character saved!"); // Placeholder for demonstration
        }
    </script>

